<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        style="@style/CardView.Content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sponsor_attra_img1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/attraction02"
                    android:focusable="true" />
                <!--活動/景點代表圖，點擊跳至
                    活動->page_event_detail
                    活動->page_attraction_detail-->

                <TextView
                    android:id="@+id/attra_ad_distance1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#CCD3D3D3"
                    android:padding="2dp"
                    android:text="1.0km" />
                <!--活動/景點之距離-->

                <TextView
                    android:id="@+id/attra_ad_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sponsor_attra_img1"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textSize="12sp"
                    android:text="[台北內湖]親子餐廳Money Jump。超夢幻親子餐廳 大人小孩都好吃的餐點" android:focusable="true"/>
                <!--活動/景點簡介，點擊跳至
                    活動->page_event_detail
                    活動->page_attraction_detail-->


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="visible"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/sponsor_attra_img2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/attraction03"
                    android:focusable="true"/>
                <!--活動/景點代表圖，點擊跳至
                    活動->page_event_detail
                    活動->page_attraction_detail-->

                <TextView
                    android:id="@+id/attra_ad_distance2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#CCD3D3D3"
                    android:padding="2dp"
                    android:text="43.0km" />
                <!--活動/景點之距離-->

                <TextView
                    android:id="@+id/attra_ad_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sponsor_attra_img2"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textSize="12sp"
                    android:text="[新竹]六福村主題遊樂園是亞洲第一座結合動物園與大型遊樂園的夢幻國度，坐落於新竹關西，園內擁有四大異國風情主題村。" android:focusable="true"/>
                <!--活動/景點簡介，點擊跳至
                    活動->page_event_detail
                    活動->page_attraction_detail-->

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</merge>
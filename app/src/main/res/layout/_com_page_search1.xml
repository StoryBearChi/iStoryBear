<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@color/colorStBearBtOrange"
        app:navigationIcon="?attr/homeAsUpIndicator"
        tools:title="@string/blogSearch" />
    <!-- 由不同入口，顯示不同title
        搜尋專欄 android:title="@string/articleSearch“
        搜尋專欄 android:title="@string/blogSearch"
        搜尋活動 android:title="@string/eventSearch"
        搜尋景點 android:title="@string/attractionSearch"
        搜尋商品 android:title="@string/goodsSearch"
     -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/snow"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/key_edit"
            android:layout_toLeftOf="@+id/key_edit"
            android:text="@string/keyword"
            android:textColorHint="@android:color/darker_gray" />

        <EditText
            android:id="@+id/key_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="@string/hint1"
            android:imeOptions="actionNext"
            android:maxLength="8"
            android:singleLine="true"
            android:textColorHint="?attr/colorButtonNormal"
            android:textSize="14sp" />
        <!-- 可限制中文最長4字，英文最長4個word嗎 -->

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/key_edit"
            android:layout_toRightOf="@+id/key_edit"
            android:background="@color/colorStBearBtOrange"
            android:text="@string/Search"
            android:textColor="@android:color/white" />
        <!-- 點擊後，開啟以該關鍵字搜尋的結果頁
                搜尋商品：com_page_groupbuy_list
                其他：com_page_result_list-->

        <!-- 以下該搜尋類型填入熱門搜尋關鍵字(只統計中文2～4個字部份)，前三個填入系統預設
            點擊後，直接開啟以該關鍵字搜尋的結果頁
                搜尋商品：com_page_groupbuy_list
                其他：com_page_result_list-->
        <TextView
            android:id="@+id/hotKeyword1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/key_edit"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true"
            android:singleLine="true"
            android:textSize="12sp"
            tools:text="@string/keyWord_blog1" />

        <TextView
            android:id="@+id/hotKeyword2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hotKeyword1"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/hotKeyword1"
            android:layout_toRightOf="@+id/hotKeyword1"
            android:clickable="true"
            android:focusable="true"
            android:singleLine="true"
            android:textSize="12sp"
            tools:text="@string/keyWord_blog2" />

        <TextView
            android:id="@+id/hotKeyword3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hotKeyword2"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/hotKeyword2"
            android:layout_toRightOf="@+id/hotKeyword2"
            android:clickable="true"
            android:focusable="true"
            android:singleLine="true"
            android:textSize="12sp"
            tools:text="@string/keyWord_blog3" />

        <TextView
            android:id="@+id/hotKeyword4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hotKeyword1"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/hotKeyword3"
            android:layout_toRightOf="@+id/hotKeyword3"
            android:clickable="true"
            android:focusable="true"
            android:singleLine="true"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="KeyWord"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/hotKeyword5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hotKeyword1"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/hotKeyword4"
            android:layout_toRightOf="@+id/hotKeyword4"
            android:clickable="true"
            android:focusable="true"
            android:singleLine="true"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="KeyWord"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/hotKeyword6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hotKeyword1"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/hotKeyword5"
            android:layout_toRightOf="@+id/hotKeyword5"
            android:clickable="true"
            android:focusable="true"
            android:singleLine="true"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="KeyWord"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/hotKeyword7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hotKeyword6"
            android:layout_alignParentBottom="false"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/hotKeyword6"
            android:layout_toRightOf="@+id/hotKeyword6"
            android:clickable="true"
            android:focusable="true"
            android:singleLine="true"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="KeyWord"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/hotKeyword8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/hotKeyword1"
            android:layout_alignStart="@+id/hotKeyword1"
            android:layout_below="@+id/hotKeyword1"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:focusable="true"
            android:singleLine="true"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="KeyWord"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/hotKeyword9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hotKeyword8"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/hotKeyword8"
            android:layout_toRightOf="@+id/hotKeyword8"
            android:clickable="true"
            android:focusable="true"
            android:singleLine="true"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="KeyWord"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/hotKeyword10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hotKeyword8"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/hotKeyword9"
            android:layout_toRightOf="@+id/hotKeyword9"
            android:clickable="true"
            android:focusable="true"
            android:singleLine="true"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="KeyWord"
            tools:visibility="visible" />

    </RelativeLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        tools:minHeight="250dp" />
    <!--開啟https://404page.missingkids.org.tw/api?key=ReMVHyfCTY8mUzMBzyn-->

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@color/colorStBearBtOrange"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="@string/storySearch" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/snow">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/key_edit"
            android:text="@string/keyword"
            android:textColorHint="@android:color/darker_gray" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/key_edit" />

        <EditText
            android:id="@+id/key_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="@string/hint1"
            android:imeOptions="actionNext"
            android:maxLength="8"
            android:maxLines="1"
            android:textColorHint="?attr/colorButtonNormal"
            android:textSize="14sp" />

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/textView1"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/key_edit"
            android:layout_toRightOf="@+id/key_edit"
            android:background="@color/colorStBearBtOrange"
            android:text="@string/Search"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/hotKeyword1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            tools:text="@string/keyWord_blog1"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/hotKeyword2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hotKeyword1"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/hotKeyword1"
            android:layout_toRightOf="@+id/hotKeyword1"
            android:clickable="true"
            android:focusable="true"
            tools:text="@string/keyWord_blog2"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/hotKeyword3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hotKeyword1"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/hotKeyword2"
            android:layout_toRightOf="@+id/hotKeyword2"
            android:clickable="true"
            android:focusable="true"
            tools:text="@string/keyWord_blog3"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/hotKeyword4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hotKeyword1"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/hotKeyword3"
            android:layout_toRightOf="@+id/hotKeyword3"
            android:clickable="true"
            android:focusable="true"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="KeyWord"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/hotKeyword5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hotKeyword1"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/hotKeyword4"
            android:layout_toRightOf="@+id/hotKeyword4"
            android:clickable="true"
            android:focusable="true"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="KeyWord"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/hotKeyword6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hotKeyword1"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/hotKeyword5"
            android:layout_toRightOf="@+id/hotKeyword5"
            android:clickable="true"
            android:focusable="true"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="KeyWord"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/hotKeyword7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hotKeyword6"
            android:layout_alignParentBottom="false"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/hotKeyword6"
            android:layout_toRightOf="@+id/hotKeyword6"
            android:clickable="true"
            android:focusable="true"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="KeyWord"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/hotKeyword8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/hotKeyword1"
            android:layout_alignStart="@+id/hotKeyword1"
            android:layout_below="@+id/hotKeyword1"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:focusable="true"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="KeyWord"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/hotKeyword9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hotKeyword8"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/hotKeyword8"
            android:layout_toRightOf="@+id/hotKeyword8"
            android:clickable="true"
            android:focusable="true"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="KeyWord"
            tools:visibility="visible" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/hotKeyword8"
            android:layout_marginTop="3dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/storyClassBtn01"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/storyClass01" />

                <Button
                    android:id="@+id/storyClassBtn05"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/storyClass05" />

                <Button
                    android:id="@+id/storyClassBtn09"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/storyClass09" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/storyClassBtn02"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/storyClass02" />

                <Button
                    android:id="@+id/storyClassBtn06"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/storyClass06" />

                <Button
                    android:id="@+id/storyClassBtn10"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/storyClass10" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/storyClassBtn03"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/storyClass03" />

                <Button
                    android:id="@+id/storyClassBtn07"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/storyClass07" />

                <Button
                    android:id="@+id/storyClassBtn11"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/storyClass11" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/storyClassBtn04"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/storySponsor" />

                <Button
                    android:id="@+id/storyClassBtn08"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/storyClass08" />

                <Button
                    android:id="@+id/storyClassBtn12"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/storyClass12" />
            </TableRow>
        </TableLayout>


    </RelativeLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        tools:minHeight="250dp" />


</LinearLayout>
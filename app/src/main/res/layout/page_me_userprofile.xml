<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snow"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/userProfileBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@color/colorStBearBtOrange"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="@string/myData" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_asterisk_red_24dp"
                android:drawableStart="@drawable/ic_asterisk_red_24dp"
                android:gravity="end"
                android:minWidth="0dp"
                android:text="@string/email"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView1"
                android:layout_toRightOf="@+id/textView1"
                android:hint="@string/hint23"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/black"
                android:textColorHint="@color/cardview_shadow_start_color" android:layout_toEndOf="@+id/textView1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/textView1"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_asterisk_red_24dp"
                android:gravity="end"
                android:minWidth="0dp"
                android:text="@string/pw"
                android:textSize="18sp"
                android:textStyle="bold" android:layout_alignEnd="@+id/textView1" android:drawableStart="@drawable/ic_asterisk_red_24dp" />

            <EditText
                android:id="@+id/password_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignRight="@+id/email_edit"
                android:layout_toEndOf="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:ems="10"
                android:hint="@string/hint24"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:textColorHint="@color/cardview_shadow_start_color" android:layout_alignEnd="@+id/email_edit" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_asterisk_red_24dp"
                android:gravity="end"
                android:minWidth="0dp"
                android:text="@string/username"
                android:textSize="18sp"
                android:textStyle="bold" android:drawableStart="@drawable/ic_asterisk_red_24dp" android:layout_alignEnd="@+id/textView2" />

            <EditText
                android:id="@+id/familyName_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_toEndOf="@+id/textView3"
                android:layout_toRightOf="@+id/textView3"
                android:hint="@string/family_name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:minWidth="90dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/cardview_shadow_start_color" />

            <EditText
                android:id="@+id/firstName_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/familyName_edit"
                android:layout_alignRight="@+id/email_edit"
                android:layout_toEndOf="@+id/familyName_edit"
                android:layout_toRightOf="@+id/familyName_edit"
                android:hint="@string/first_name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:textColorHint="@color/cardview_shadow_start_color" android:layout_alignEnd="@+id/email_edit" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView3"
                android:layout_alignRight="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="15dp"
                android:gravity="end"
                android:minWidth="0dp"
                android:text="@string/nickname"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nickName_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView4"
                android:layout_alignRight="@+id/email_edit"
                android:layout_toEndOf="@+id/textView3"
                android:layout_toRightOf="@+id/textView3"
                android:ems="10"
                android:hint="@string/hint25"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:textColorHint="@color/cardview_shadow_start_color" android:layout_alignEnd="@+id/email_edit" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView4"
                android:layout_alignRight="@+id/textView4"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="15dp"
                android:gravity="end"
                android:minWidth="0dp"
                android:text="@string/address"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/city_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView5"
                android:layout_toEndOf="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:entries="@array/TWCity22"
                android:prompt="@string/spinner_prompt_city" />

            <Spinner
                android:id="@+id/district_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/city_spinner"
                android:layout_alignBottom="@+id/city_spinner"
                android:layout_toEndOf="@+id/city_spinner"
                android:layout_toRightOf="@+id/city_spinner"
                android:entries="@array/TaipeiCity"
                android:prompt="@string/spinner_prompt_district" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/textView5"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_asterisk_red_24dp"
                android:minWidth="0dp"
                android:text="@string/userClass"
                android:textSize="18sp"
                android:textStyle="bold" android:layout_alignEnd="@+id/textView5" android:drawableStart="@drawable/ic_asterisk_red_24dp" />

            <Spinner
                android:id="@+id/userClass_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView6"
                android:layout_toEndOf="@+id/textView6"
                android:layout_toRightOf="@+id/textView6"
                android:entries="@array/userClass"
                android:prompt="@string/spinner_prompt_userclass" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView6"
                android:layout_alignRight="@+id/textView6"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_asterisk_red_24dp"
                android:drawableStart="@drawable/ic_asterisk_red_24dp"
                android:gravity="end"
                android:minWidth="0dp"
                android:text="@string/mobile"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/mobile_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView7"
                android:layout_alignRight="@+id/email_edit"
                android:layout_below="@+id/textView6"
                android:layout_toRightOf="@+id/textView7"
                android:hint="@string/hint26"
                android:imeOptions="actionNext"
                android:inputType="textPersonName|phone"
                android:textColor="@android:color/black"
                android:textColorHint="@color/cardview_shadow_start_color" android:layout_alignEnd="@+id/email_edit" android:layout_toEndOf="@+id/textView7" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/mobile_edit"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="5dp"
                android:checked="true"
                android:text="@string/hint27" android:layout_alignStart="@+id/mobile_edit" />

            <Button
                android:id="@+id/OKBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkBox2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorStBearBtOrange"
                android:minHeight="30dp"
                android:text="@string/OK"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/OKBtn"
                android:layout_alignRight="@+id/OKBtn"
                android:layout_below="@+id/OKBtn"
                android:layout_marginTop="15dp"
                android:drawableLeft="@android:drawable/checkbox_on_background"
                android:text="@string/hint28" android:layout_alignStart="@+id/OKBtn" android:layout_alignEnd="@+id/OKBtn" android:drawableStart="@android:drawable/checkbox_on_background" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/OKBtn"
                android:layout_alignRight="@+id/OKBtn"
                android:layout_below="@+id/textView18"
                android:layout_marginTop="8dp"
                android:drawableLeft="@android:drawable/checkbox_on_background"
                android:text="@string/hint29" android:layout_alignStart="@+id/OKBtn" android:drawableStart="@android:drawable/checkbox_on_background" android:layout_alignEnd="@+id/OKBtn" />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>